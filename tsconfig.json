{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false, // Дозволяє неявний тип any
    "resolveJsonModule": true // Дозволяє імпорт JSON файлів
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
